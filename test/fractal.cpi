fn draw() {
    #import "io";
    #import "buffer";

    shades := " .-:;+=xX$& ";
    limit := shades.count - 1;

    row := 0;
    while row < 24 {
        defer { row += 1; }

        buf := buffer.make!(i8)(64);
        defer {
            #import "mem";
            mem.free(buf.buf.data);
        }

        r := cast(f32) row / 12.0 - 1.0;
        line := "";

        col := 0;
        while col < 80 {
            defer { col += 1; }

            c := cast(f32) col / 30.0 - 2;
            x := 0.0;
            y := 0.0;
            i := 0;

            while i < limit and x * x + y * y < 4.0 {
                tmp := x * x - y * y + c;
                y = 2.0 * x * y + r;
                x = tmp;
                i += 1;
            }

            &buf|buffer.append(shades[i]);
        }

        buf.buf | io.println;
    }
}

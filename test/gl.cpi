#link "libglfw";

GLFW_CONTEXT_VERSION_MAJOR: i32 = 3;
GLFW_CONTEXT_VERSION_MINOR: i32 = 2;
GLFW_OPENGL_FORWARD_COMPAT: i32 = 0x00022006;
GLFW_OPENGL_PROFILE       : i32 = 0x00022008;
GLFW_OPENGL_CORE_PROFILE  : i32 = 0x00032001;
GLFW_OPENGL_DEBUG_CONTEXT : i32 = 0x00022007;

GL_DEPTH_BUFFER_BIT   : i32 = 0x00000100;
GL_STENCIL_BUFFER_BIT : i32 = 0x00000400;
GL_COLOR_BUFFER_BIT   : i32 = 0x00004000;
GL_ALL_BITS_HACK      : i32 = 16884;

type Window *none

fn glfwInit() bool
fn glfwTerminate() none
fn glfwWindowHint(hint: i32, value: i32) none
fn glfwCreateWindow(width: i32, height: i32, title: *i8, monitor: *none = nil, share: *none = nil) Window
fn glfwMakeContextCurrent(window: Window) none
fn glfwSwapInterval(interval: i32) none
fn glfwWindowShouldClose(window: Window) bool
fn glfwGetCursorPos(window: Window, mx: *i32, my: *i32) none
fn glfwGetWindowSize(window: Window, winWidth: *i32, winHeight: *i32) none
fn glfwGetFramebufferSize(window: Window, fbWidth: *i32, fbHeight: *i32) none
fn glViewport(x: i32, y: i32, width: i32, height: i32) none
fn glClearColor(r: f32, g: f32, b: f32, a: f32) none
fn glClear(bitfield: i32) none
fn glfwSwapBuffers(window: Window) none
fn glfwPollEvents() none
